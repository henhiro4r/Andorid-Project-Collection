<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

    <ImageView
        android:id="@+id/logo_pict"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSign"
        android:layout_width="140dp"
        android:layout_height="38dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/round_button2"
        android:text="Sign Up"
        android:textColor="@android:color/background_light"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/cpassreg"
        app:layout_constraintStart_toStartOf="@+id/cpassreg"
        app:layout_constraintTop_toBottomOf="@+id/cpassreg" />

    <EditText
        android:id="@+id/emailreg"
        android:layout_width="300dp"
        android:layout_height="51dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/round_edit_text"
        android:ems="10"
        android:hint="@string/txt_email"
        android:inputType="textEmailAddress"
        android:padding="8dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/logo_pict"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/logo_pict"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        android:importantForAutofill="no" />

    <EditText
        android:id="@+id/namain"
        android:layout_width="300dp"
        android:layout_height="51dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/round_edit_text"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:padding="8dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/emailreg"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/emailreg"
        app:layout_constraintTop_toBottomOf="@+id/emailreg" />

    <EditText
        android:id="@+id/passreg"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/round_edit_text"
        android:ems="10"
        android:hint="@string/txt_passin"
        android:inputType="textPassword"
        android:padding="8dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/namain"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/namain"
        app:layout_constraintTop_toBottomOf="@+id/namain" />

    <EditText
        android:id="@+id/cpassreg"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/round_edit_text"
        android:ems="10"
        android:hint="@string/txt_cpass"
        android:inputType="textPassword"
        android:padding="8dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/passreg"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/passreg"
        app:layout_constraintTop_toBottomOf="@+id/passreg" />

    <TextView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="16dp"
        android:text="@string/txt_login"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="@+id/btnSign"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/btnSign"
        app:layout_constraintTop_toBottomOf="@+id/btnSign" />

    <TextView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="@string/txt_logo"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/logo_pict"
        app:layout_constraintStart_toStartOf="@+id/logo_pict"
        app:layout_constraintTop_toBottomOf="@+id/logo_pict" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/txt_already_have_account"
        app:layout_constraintBottom_toBottomOf="@+id/login"
        app:layout_constraintEnd_toStartOf="@+id/login"
        app:layout_constraintTop_toTopOf="@+id/login" />

    <ProgressBar
        android:id="@+id/progressreg"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/btnSign"
        app:layout_constraintEnd_toEndOf="@+id/btnSign"
        app:layout_constraintStart_toStartOf="@+id/btnSign"
        app:layout_constraintTop_toTopOf="@+id/btnSign" />

</android.support.constraint.ConstraintLayout>